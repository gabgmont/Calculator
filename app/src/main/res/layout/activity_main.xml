<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5C9EDC39"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/layoutBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/layoutHorizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineBottom">

        <TextView
            android:id="@+id/button0"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#B98BC34A"
            android:text="0"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="539dp" />

        <TextView
            android:id="@+id/buttonDot"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#8BC34A"
            android:text="."
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="539dp" />

        <TextView
            android:id="@+id/buttonEquals"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#B98BC34A"
            android:text="="
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="539dp" />

        <TextView
            android:id="@+id/buttonPlus"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:width="48dp"
            android:background="#8BC34A"
            android:text="+"
            tools:layout_editor_absoluteX="232dp"
            tools:layout_editor_absoluteY="539dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMiddleBottom"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/guidelineBottom"
        app:layout_constraintEnd_toStartOf="@+id/layoutHorizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineMiddleBottom">

        <TextView
            android:id="@+id/button1"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#8BC34A"
            android:text="1"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="483dp" />

        <TextView
            android:id="@+id/button2"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#B98BC34A"
            android:text="2"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="483dp" />

        <TextView
            android:id="@+id/button3"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#8BC34A"
            android:text="3"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="483dp" />

        <TextView
            android:id="@+id/buttonMinus"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#B98BC34A"
            android:text="-" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutMiddleTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMiddleBottom"
        app:layout_constraintEnd_toStartOf="@+id/layoutHorizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineMiddleTop">

        <TextView
            android:id="@+id/button4"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#B98BC34A"
            android:text="4"
            tools:layout_editor_absoluteX="64dp"
            tools:layout_editor_absoluteY="427dp" />

        <TextView
            android:id="@+id/button5"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#8BC34A"
            android:text="5"
            tools:layout_editor_absoluteX="120dp"
            tools:layout_editor_absoluteY="427dp" />

        <TextView
            android:id="@+id/button6"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#B98BC34A"
            android:text="6"
            tools:layout_editor_absoluteX="176dp"
            tools:layout_editor_absoluteY="427dp" />

        <TextView
            android:id="@+id/buttonMultiply"
            android:layout_width="48dp"
            android:gravity="center"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#8BC34A"
            android:text="*" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutTop"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/guidelineMiddleTop"
        app:layout_constraintEnd_toStartOf="@+id/layoutHorizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineTop">

        <TextView
            android:id="@+id/button7"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#8BC34A"
            android:text="7"
            tools:layout_editor_absoluteY="371dp" />

        <TextView
            android:id="@+id/button8"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#B98BC34A"
            android:text="8"
            tools:layout_editor_absoluteY="371dp" />

        <TextView
            android:id="@+id/button9"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#8BC34A"
            android:text="9"
            tools:layout_editor_absoluteY="371dp" />

        <TextView
            android:id="@+id/buttonDivide"
            android:layout_width="48dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_weight="1"
            android:background="#B98BC34A"
            android:text="/" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutHorizontal"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guidelineTop">

        <TextView
            android:id="@+id/buttonClear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#C94CAF50"
            android:text="Clear"
            tools:layout_editor_absoluteX="288dp"
            tools:layout_editor_absoluteY="450dp" />

        <TextView
            android:id="@+id/buttonNeg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:background="#4CAF50"
            android:text="Neg" />
    </LinearLayout>

    <TextView
        android:id="@+id/result"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/newNumber"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="numberSigned|numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/operation"
        app:layout_constraintTop_toBottomOf="@+id/result" />

    <TextView
        android:id="@+id/operation"
        android:layout_width="40dp"
        android:layout_height="50dp"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/newNumber"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/newNumber" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMiddleTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineMiddleBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.7031464" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.85" />

</androidx.constraintlayout.widget.ConstraintLayout>